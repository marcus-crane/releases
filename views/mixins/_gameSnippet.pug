mixin gameSnippet(game = {})
  div(class="notification is-dark")
    h5(class="title is-5")
      a(href=game.slug) #{game.name}
    h5(class="subtitle is-6")
      - let month = h.moment(game.release).format('MMMM').toLowerCase()
      a(href=month) #{h.moment(game.release).format('MMMM Do YYYY')}
    div(class="platforms")
    for platform in game.platforms
      span(class="tag")
        - let link = platform.toLowerCase()
        a(href=link) #{platform}