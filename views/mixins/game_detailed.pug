mixin game_detailed(title, date, bgcover, gb_id, developers, publishers, description)
    section.game(style={'background-image': 'url(' + bgcover + ')'})
        article.details
            h1 #{gb_id} #{title}
            h2 #{date.format("dddd, MMMM Do YYYY")}
            h2 #{developers}
            h2 #{publishers}
            h2 #{description}
    form(method="POST" action="/backend")
        input(type="hidden" name="title" value=title)
        input(type="hidden" name="date" value=date.format('MMMM D YYYY'))
        input(type="hidden" name="bgcover" value=bgcover)
        input(type="hidden" name="bgcover" value=gb_id)
        input(type="hidden" name="bgcover" value=developers)
        input(type="hidden" name="bgcover" value=publishers)
        input(type="hidden" name="bgcover" value=description)
        input(type="submit")
